<Window x:Class="Macros_Keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Macros_Keyboard"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		WindowStyle="None"
		WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
		<Grid   Background="#262626">
			<Grid	x:Name="header_panel"
					VerticalAlignment="Top"
					Height="25"
					Background="#FF1B1B1B"
					MouseDown="Window_MouseDown">
				<ComboBox	x:Name="com_port_selector"
							HorizontalAlignment="Left"
							Width="100"
							Background="#FF1B1B1B"
							DropDownOpened="ComboBox_Opened">
					
				</ComboBox>
			</Grid>
			<Grid	x:Name="buttons_panel"
					VerticalAlignment="Bottom"
					Height="100"
					Background="#FF171717">
				
			</Grid>
		</Grid>
	</Grid>
</Window>
